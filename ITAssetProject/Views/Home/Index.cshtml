@{
    ViewData["Title"] = "List of IT Asset";
}



<div class="row">
    <div class="col-12">
        <h4>List of IT Asset</h4>
        <em>You can view, add and edit IT Assets</em>
    </div>
    <div class="col-12">
        <div class="d-flex justify-content-end border-top border-bottom my-2 py-2">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddModal">Add <bi class="bi bi-plus-circle"></bi></button>
            <button class="btn btn-danger ms-2" onclick="DeleteSelectedRows()">Remove <bi class="bi bi-x-circle"></bi></button>
            <button class="btn btn-secondary ms-2" data-bs-toggle="modal" data-bs-target="#EditModal">Edit <bi class="bi bi-pencil-square"></bi></button>
            <button class="btn btn-dark ms-2" onclick="DetailSelectedRow()">Detail <bi class="bi bi-file-earmark-text"></bi></button>
        </div>
        <div id="myGrid" class="ag-theme-quartz-dark" style="height: 500px"></div>
    </div>
</div>


<!-- Add Asset Modal -->
<div class="modal fade" id="AddModal">
    <div class="modal-dialog">
        <form id="AddModalForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create New Asset</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control" placeholder="Serial Number" name="SerialNumber" required>
                        <label>Serial Number</label>
                        <span class="text-danger" for="SerialNumber"></span>
                    </div>

                    <div class="form-floating my-2">
                        <input type="text" class="form-control" placeholder="Brand" name="Brand" required>
                        <label>Brand</label>
                        <span class="text-danger" for="Brand"></span>
                    </div>

                    <div class="form-floating my-2">
                        <select class="form-select" name="Status" required>
                            <option disabled hidden selected></option>
                            <option>New</option>
                            <option>InUse</option>
                            <option>Damaged</option>
                            <option>Dispose</option>
                        </select>
                        <label>Status</label>
                        <span class="text-danger" for="Status"></span>
                    </div>

                    <div class="form-floating my-2">
                        <input type="date" class="form-control" name="WarrantyExpirationDate" required>
                        <label>Warranty Expiration Date</label>
                        <span class="text-danger" for="WarrantyExpirationDate"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Detail Asset Modal -->
<div class="modal fade" id="DetailModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Asset Detail</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="DetailModalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Asset Modal -->
<div class="modal fade" id="EditModal">
    <div class="modal-dialog">
        <form id="EditModalForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Edit Asset</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating my-2">
                        <input type="hidden" name="id" required>
                        <input type="number" class="form-control" placeholder="Serial Number" name="SerialNumber" required>
                        <label>Serial Number</label>
                        <span class="text-danger" for="SerialNumber"></span>
                    </div>

                    <div class="form-floating my-2">
                        <input type="text" class="form-control" placeholder="Brand" name="Brand" required>
                        <label>Brand</label>
                        <span class="text-danger" for="Brand"></span>
                    </div>

                    <div class="form-floating my-2">
                        <select class="form-select" name="Status" required>
                            <option disabled hidden selected></option>
                            <option>New</option>
                            <option>InUse</option>
                            <option>Damaged</option>
                            <option>Dispose</option>
                        </select>
                        <label>Status</label>
                        <span class="text-danger" for="Status"></span>
                    </div>

                    <div class="form-floating my-2">
                        <input type="date" class="form-control" name="WarrantyExpirationDate" required>
                        <label>Warranty Expiration Date</label>
                        <span class="text-danger" for="WarrantyExpirationDate"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/ag-grid-community/dist/ag-grid-community.min.js"></script>
<script src="~/js/Home/Index.js" asp-append-version="true"></script>